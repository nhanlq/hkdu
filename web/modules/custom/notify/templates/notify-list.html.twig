{#
/**
 * @file notify.html.twig
 * Default theme implementation to present Notify data.
 *
 * This template is used when viewing Notify pages.
 *
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 * - attributes: HTML attributes for the container element.
 *
 * @see template_preprocess_notify()
 *
 * @ingroup themeable
 */
#}

<div class="notify-wrapper">
  {% if notifies %}
    <table class="notification-list">
      <thead>
      <th>#ID</th>
      <th>Notification</th>
      <th>Status</th>
      <th>Preview</th>
      <th>Edit</th>
      </thead>
      <tbody>
      {% for notify in notifies %}
        {% if notify.status.value == 1 %}
          <tr class="unread">
        {% else %}
          <tr>
        {% endif %}
        <td>{{ loop.index }}</td>
        <td>{{ notify.name.value|raw }}</td>
        <td>
          {% if notify.status.value == 1 %}
            Unread
          {% else %}
            Read
          {% endif %}
        </td>
        <td><a class="update-notification" data-id="{{ notify.id.value }}" href="{{ notify.field_preview.value }}">Preview</a>
        </td>
        {% if 'Your' in notify.name.value %}
          <td>&nbsp;</td>
        {% else %}
          <td><a class="update-notification-edit" data-id="{{ notify.id.value }}" href="{{ notify.field_link.value }}">Edit</a>
          </td>
        {% endif %}
        </tr>
      {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No notification</p>
  {% endif %}
</div>
