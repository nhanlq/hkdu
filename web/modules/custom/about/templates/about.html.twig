<article{{ attributes.addClass(classes) }}>

    {{ title_prefix }}
    {% if label and not page %}
      <h2{{ title_attributes }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h2>
    {% endif %}
    {{ title_suffix }}

    {% if display_submitted %}
      <footer>
          {{ author_picture }}
        <div{{ author_attributes.addClass('author') }}>
            {% trans %} {{ author_name }} Published at {{ date }}{% endtrans %}
            {{ metadata }}
        </div>
      </footer>
    {% endif %}

  <div{{ content_attributes.addClass('about') }}>
      {{ content }}
  </div>

</article>